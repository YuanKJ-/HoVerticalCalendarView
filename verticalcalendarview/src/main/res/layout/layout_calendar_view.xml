<?xml version="1.0" encoding="utf-8"?>

<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_calendar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        android:background="@color/calendar_color_bg" />

    <TextView
        android:id="@+id/tv_month_label"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:background="@color/calendar_color_bg"
        android:gravity="center"
        android:textColor="@color/calendar_color_white"
        tools:text="2018年12月"
        android:textSize="14dp" />

    <com.hosle.calendar.verticalcalendar.view.DayOfWeekView
        android:id="@+id/header_day_of_week"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/calendar_color_bg"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="39.5dp"
        android:background="#19ffffff" />
</merge>
